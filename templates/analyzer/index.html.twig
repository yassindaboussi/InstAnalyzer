{# templates/analyzer/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-4xl mx-auto animate-on-scroll">
    <!-- Hero -->
    <div class="text-center mb-12 lg:mb-16">
        <div class="inline-block mb-6 p-3 rounded-2xl glass-effect">
            <div class="w-16 h-16 rounded-xl gradient-bg flex items-center justify-center mx-auto mb-4 animate-float">
                <i data-lucide="sparkles" class="w-10 h-10 text-white"></i>
            </div>
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            <span class="gradient-text">Analyze Your Instagram</span><br>
            <span class="text-gray-700 dark:text-gray-300">Network in Seconds</span>
        </h1>
        <p class="text-lg lg:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">
            Upload your Instagram data files to discover detailed insights about your followers and following relationships.
        </p>
        <div class="flex flex-wrap justify-center gap-4 mb-10">
            <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-green-50 dark:bg-green-900/20">
                <i data-lucide="shield" class="w-4 h-4 text-green-500"></i>
                <span class="text-sm font-medium text-green-700 dark:text-green-300">100% Private</span>
            </div>
            <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-50 dark:bg-blue-900/20">
                <i data-lucide="lock" class="w-4 h-4 text-blue-500"></i>
                <span class="text-sm font-medium text-blue-700 dark:text-blue-300">No Login Required</span>
            </div>
            <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-purple-50 dark:bg-purple-900/20">
                <i data-lucide="gift" class="w-4 h-4 text-purple-500"></i>
                <span class="text-sm font-medium text-purple-700 dark:text-purple-300">Free Forever</span>
            </div>
        </div>
    </div>

    <!-- How It Works -->
    <div class="mb-12">
        <h2 class="text-2xl font-bold text-center mb-8 text-gray-800 dark:text-white">
            <span class="highlight relative">How It Works</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {% set steps = [
                {icon: 'download-cloud', title: 'Request Data', desc: 'Request your data from Instagram settings'},
                {icon: 'folder-open', title: 'Upload Files', desc: 'Upload followers and following JSON files'},
                {icon: 'trending-up', title: 'Get Insights', desc: 'Receive detailed analytics instantly'}
            ] %}
            {% for step in steps %}
            <div class="glass-effect rounded-2xl p-6 text-center transition-all hover:shadow-card-hover">
                <i data-lucide="{{ step.icon }}" class="w-12 h-12 mb-4 text-primary-500"></i>
                <h3 class="font-bold text-lg mb-2 text-gray-800 dark:text-white">{{ step.title }}</h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm">{{ step.desc }}</p>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Upload Form -->
    <div class="glass-effect rounded-3xl p-6 lg:p-8 shadow-lg">
        <form method="post" action="{{ path('app_results') }}" enctype="multipart/form-data" class="space-y-8" id="upload-form">
            <!-- Followers -->
            <div>
                <label class="block text-lg font-semibold mb-2">Followers Files</label>
                <p class="text-gray-600 dark:text-gray-400 mb-4">Upload <code>followers_1.json</code> and optionally <code>followers_2.json</code></p>
                <div class="upload-zone relative rounded-2xl p-8 border-2 border-dashed border-gray-300 dark:border-gray-700 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900">
                    <input id="followers-input" type="file" name="followers[]" multiple required accept=".json" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                    <div class="text-center">
                        <div class="w-16 h-16 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mx-auto mb-4">
                            <i data-lucide="users" class="w-10 h-10 text-primary-500"></i>
                        </div>
                        <p class="font-medium mb-2"><span class="text-primary-500">Click to upload</span> or drag and drop</p>
                        <p class="text-sm text-gray-500">JSON files only (max 2)</p>
                    </div>
                </div>
                <div id="followers-preview" class="mt-4 space-y-2 hidden"></div>
            </div>

            <!-- Following -->
            <div>
                <label class="block text-lg font-semibold mb-2">Following File</label>
                <p class="text-gray-600 dark:text-gray-400 mb-4">Upload <code>following.json</code></p>
                <div class="upload-zone relative rounded-2xl p-8 border-2 border-dashed border-gray-300 dark:border-gray-700 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900">
                    <input id="following-input" type="file" name="following" required accept=".json" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10">
                    <div class="text-center">
                        <div class="w-16 h-16 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mx-auto mb-4">
                            <i data-lucide="user-plus" class="w-10 h-10 text-purple-500"></i>
                        </div>
                        <p class="font-medium mb-2"><span class="text-purple-500">Click to upload</span> or drag and drop</p>
                        <p class="text-sm text-gray-500">Single JSON file</p>
                    </div>
                </div>
                <div id="following-preview" class="mt-4 space-y-2 hidden"></div>
            </div>

            <!-- Submit -->
            <div class="pt-4">
                <button type="submit" id="analyze-btn" class="w-full py-4 px-6 bg-gradient-to-r from-primary-500 to-purple-600 text-white font-semibold rounded-2xl hover:shadow-lg hover:scale-[1.02] active:scale-95 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-3">
                    <i data-lucide="zap" class="w-5 h-5"></i>
                    <span class="text-lg">Analyze Network</span>
                </button>
                <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-3">
                    Your data is processed locally and never stored on our servers.
                </p>
            </div>
        </form>
    </div>

    <!-- FAQ -->
    <div class="mt-16 glass-effect rounded-3xl p-8">
        <h2 class="text-2xl font-bold text-center mb-8"><span class="highlight relative">FAQ</span></h2>
        <div class="space-y-4 max-w-2xl mx-auto">
            {% set faqs = [
                {q: 'How do I get my Instagram data?', a: 'Go to Instagram Settings → Security → Download Data.'},
                {q: 'Is this safe?', a: 'Yes! Everything runs in your browser. We never see your data.'},
                {q: 'What files do I need?', a: 'followers_1.json, (followers_2.json), and following.json'}
            ] %}
            {% for faq in faqs %}
            <div class="rounded-xl p-5 bg-gray-50 dark:bg-gray-800/50 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                <div class="font-semibold mb-2 flex items-center">
                    <i data-lucide="help-circle" class="w-5 h-5 text-primary-500 mr-3"></i>
                    {{ faq.q }}
                </div>
                <p class="text-gray-600 dark:text-gray-400 text-sm pl-8">{{ faq.a }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<script>
    const followersInput = document.getElementById('followers-input');
    const followingInput = document.getElementById('following-input');
    const analyzeBtn = document.getElementById('analyze-btn');
    const followersPreview = document.getElementById('followers-preview');
    const followingPreview = document.getElementById('following-preview');

    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(e => {
        document.querySelectorAll('.upload-zone').forEach(zone => {
            zone.addEventListener(e, ev => { ev.preventDefault(); ev.stopPropagation(); });
        });
    });
    ['dragenter', 'dragover'].forEach(e => {
        document.querySelectorAll('.upload-zone').forEach(zone => {
            zone.addEventListener(e, () => zone.classList.add('dragover'));
        });
    });
    ['dragleave', 'drop'].forEach(e => {
        document.querySelectorAll('.upload-zone').forEach(zone => {
            zone.addEventListener(e, () => zone.classList.remove('dragover'));
        });
    });

    function updatePreview(files, type) {
        const preview = type === 'followers' ? followersPreview : followingPreview;
        preview.innerHTML = '';
        preview.classList.remove('hidden');
        Array.from(files).forEach(file => {
            const div = document.createElement('div');
            div.className = 'flex items-center justify-between p-3 rounded-lg bg-green-50 dark:bg-green-900/20';
            div.innerHTML = `
                <div class="flex items-center space-x-3">
                    <i data-lucide="check-circle" class="w-8 h-8 text-green-600 dark:text-green-400"></i>
                    <div>
                        <p class="font-medium">${file.name}</p>
                        <p class="text-xs text-gray-500">${(file.size/1024).toFixed(1)} KB</p>
                    </div>
                </div>
                <button type="button" onclick="this.parentElement.parentElement.remove(); validateForm();" class="text-gray-400 hover:text-red-600">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            `;
            preview.appendChild(div);
        });
        lucide.createIcons();
        validateForm();
        showToast(`${files.length} ${type} file(s) ready`, 'success');
    }

    followersInput.addEventListener('change', e => updatePreview(e.target.files, 'followers'));
    followingInput.addEventListener('change', e => updatePreview(e.target.files, 'following'));

    function validateForm() {
        analyzeBtn.disabled = !followersInput.files.length || !followingInput.files.length;
    }

    document.getElementById('upload-form').addEventListener('submit', function() {
        if (!analyzeBtn.disabled) {
            analyzeBtn.innerHTML = '<div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div><span class="ml-3">Analyzing...</span>';
            analyzeBtn.disabled = true;
        }
    });
</script>
{% endblock %}